{
  "$schema": "./node_modules/rome/configuration_schema.json",
  "organizeImports": {
    "enabled": false
  },
  "files": {

    "ignore":  ["node_modules/*", ".cspell/*", ".vscode/*", ".env.local", ".next/*", "public/*", ".eslintrc.json"  ]
  },

  "formatter": {
    "indentStyle": "tab",
    "indentSize": 2

  },
  "linter": {
    "enabled": true,

    "rules": {
      "recommended": true,
      
      "suspicious": {
        "noCommentText": "off",
        "noDoubleEquals": "off"
      }

    }
    

  }
}