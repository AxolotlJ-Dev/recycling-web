{
	"$schema": "https://docs.rome.tools/schemas/12.1.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "files": {

    "ignore":  ["node_modules/*", ".cspell/*", ".vscode/*", ".env.local", ".next/*", "public/*", ".eslintrc.json"  ]
  },
  "formatter": {
    "indentStyle": "tab",
    "indentSize": 2

  },
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
      "suspicious":{
        "noCommentText": "off",
        "noDoubleEquals": "off"
        
      }
		}
	}
}
